<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <stroke android:width="1.0px" android:color="@color/white_alpha000" />

        <gradient android:angle="270.0" android:endColor="@color/black_alpha90" android:startColor="@color/black_alpha90" />
    </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
        <gradient android:angle="270.0" android:endColor="@color/black_alpha90" android:startColor="@color/black_alpha90" />

        <stroke android:width="1.0px" android:color="@color/white_alpha000" />
    </shape></item>
    <item><shape android:shape="rectangle">
        <gradient android:angle="270.0" android:endColor="@color/black" android:startColor="@color/black" />

        <stroke android:width="1.0px" android:color="@color/white_alpha000" />
    </shape></item>

</selector>