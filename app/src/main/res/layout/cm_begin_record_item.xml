<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="#00000000"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:orientation="horizontal"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
android:gravity="left|center_vertical"
    android:layout_height="53dp">
    <TextView
        android:id="@+id/record_item_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
     />
    <TextView
        android:id="@+id/record_item_comment_id"
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/cm_bj_color"
        android:textSize="12sp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="53dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    >
    <ImageView

        android:id="@+id/img_play_id"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/cm_bg_play"
        />

    <ImageView
        android:id="@+id/img_record_id"

        android:layout_width="33dp"
        android:layout_marginLeft="39dp"
        android:layout_height="33dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/cm_bg_record"
        />

    <ImageView
        android:id="@+id/img_download_id"

        android:layout_width="33dp"
        android:layout_marginLeft="39dp"
        android:layout_height="33dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/cm_bg_db_c"
        />


</LinearLayout>




</RelativeLayout>
