<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="51dp"
        android:layout_height="67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="手机号："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="161dp"
                android:layout_height="match_parent"

                >

                <EditText
                    android:id="@+id/phone_edittext_id"

                    android:layout_width="161dp"
                    android:layout_height="match_parent"
                    android:maxLength="11"
                    android:cursorVisible="false"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:background="@color/white_alpha000"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="161dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="验证码："

                android:textColor="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"

                >

                <EditText
                    android:id="@+id/code_edittext_id"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:maxLength="6"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_alpha000"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/code_comment_id"

                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_black"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="年    龄："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"

                >

                <EditText
                    android:id="@+id/age_edittext_id"

                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:maxLength="3"
                    android:inputType="number"
                    android:gravity="bottom"

                    android:cursorVisible="false"
                    android:textCursorDrawable="@null"
                    android:layout_alignParentBottom="true"

                    android:background="@color/white_alpha000"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="性    别："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                >
                <Switch
                    android:id="@+id/sex_switch_id"

                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"

                    android:textOff="女"
                    android:textOn="男"
                    />


                <View
                    android:layout_width="161dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black" />
            </RelativeLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/begin_use_id"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_gravity="center_horizontal"
            android:text="开始使用"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout>
