<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="130dp"

    android:background="#00000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:background="@drawable/rounded_process"
        android:orientation="vertical"
        >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="温馨提示"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
android:textSize="15sp"
    android:textColor="@color/white"
    />

        <TextView
            android:id="@+id/alert_comment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主人，您还没有绑定设备，请您前往绑定设备或者切换账号，请选择"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:textColor="@color/white_alpha60"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/change_user_id"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换账号"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/choose_bind_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定设备"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>