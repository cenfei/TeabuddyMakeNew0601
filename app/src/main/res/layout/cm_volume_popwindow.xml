<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306dp"
    android:layout_height="171dp"

    android:background="#000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical"


    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="151dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerInParent="true"
        >
    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="泡茶音乐"
            android:textColor="@color/white_alpha80"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="15dp"
            android:layout_height="15dp"
            android:src="@drawable/fc_voice"
            android:layout_gravity="center_vertical"
            />

        <SeekBar
            android:id="@+id/seekbar_first"
            android:layout_width="135dp"

            android:secondaryProgress="@color/white"
            android:progressBackgroundTint="@color/font_titie2"

            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:src="@drawable/fc_voice"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="306dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="提示音"
            android:textColor="@color/white_alpha80"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="15dp"
            android:layout_height="15dp"
            android:src="@drawable/fc_voice"
            android:layout_gravity="center_vertical"
            />

        <SeekBar
            android:id="@+id/seekbar_second"
            android:layout_width="135dp"
            android:layout_gravity="center_vertical"
            android:secondaryProgress="@color/white"
            android:progressBackgroundTint="@color/font_titie2"

            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:src="@drawable/fc_voice"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<LinearLayout
    android:layout_width="306dp"
    android:layout_height="20dp"
    android:background="@color/white_alpha000"
    android:gravity="right"
    >
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_below="@+id/record_line_id"
        android:background="@drawable/cm_rerangle2_record" />


</LinearLayout>
</LinearLayout>