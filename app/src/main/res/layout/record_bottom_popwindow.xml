<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/rb_play_line"
        android:layout_width="0dp"
        android:background="@color/black"

        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="71dp"

            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_play"
                />

            <TextView
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="试听"
                android:textSize="11sp"
                android:textColor="@color/white_alpha80"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/rb_collect_line"
        android:background="@color/black"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/rb_collect_img"

                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_collect"
                />

            <TextView
                android:id="@+id/rb_collect_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginBottom="16dp"
                android:textSize="11sp"
                android:textColor="@color/white_alpha80"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />



        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/rb_delete_line"
        android:background="@color/black"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_delete"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="11sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white_alpha80"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/rb_share_line"
        android:background="@color/black"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_share"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="11sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white_alpha80"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />



        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/rb_apply_line"
        android:background="@color/black"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="71dp"

            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_apply"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用"
                android:layout_marginBottom="16dp"
                android:textSize="11sp"
                android:textColor="@color/white_alpha80"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />



        </RelativeLayout>



    </LinearLayout>


</LinearLayout>