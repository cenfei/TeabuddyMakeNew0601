<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#00000000"
    android:orientation="horizontal"
    >


       <TextView
           android:id="@+id/num_pc_id"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="55dp"
        android:gravity="center"
        android:text="第2泡"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/num_time_id"

        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="35dp"
        android:gravity="center"
        android:text="0分40秒"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/num_pc_id"
        android:layout_marginStart="29dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="44dp"
    android:layout_marginRight="55dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    >
    <ImageView

        android:id="@+id/img_play_id"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/pc_update"
        />

    <ImageView
        android:id="@+id/img_record_id"

        android:layout_width="15dp"
        android:layout_marginLeft="45dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/pc_delete"
        />




</LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:background="@color/white_alpha60"
    />

</RelativeLayout>
